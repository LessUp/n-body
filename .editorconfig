root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{h,hpp,c,cpp,cu,cuh}]
indent_size = 4

[*.{glsl,vert,frag}]
indent_size = 4

[*.{yml,yaml,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_size = 4
